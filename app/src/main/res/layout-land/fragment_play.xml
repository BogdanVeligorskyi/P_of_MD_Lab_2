<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screenPadding"
    android:orientation="horizontal"
    android:stretchColumns="*">

    <View
        android:id="@+id/space"
        android:layout_width="@dimen/activity_play_space_1_width"
        android:layout_height="@dimen/center_square_width_height"
        android:background="@color/white"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_play_15_margin"
        android:layout_toStartOf="@id/space"
        android:gravity="start"
        android:textSize="@dimen/activity_play_text_size"
        android:text="@string/question_no" />

    <TextView
        android:id="@+id/question_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_play_15_margin"
        android:layout_marginBottom="@dimen/activity_play_30_margin"
        android:layout_toEndOf="@id/space"
        android:gravity="end"
        android:textSize="@dimen/activity_play_text_size"
        android:text="@string/earned" />
    <View
        android:id="@+id/space_2"
        android:layout_width="@dimen/activity_play_space_1_width"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerInParent="true"/>

    <CheckBox
        android:id="@+id/is_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/activity_play_15_margin"
        android:layout_marginTop="@dimen/activity_play_25_margin"
        android:layout_toStartOf="@id/space_2"
        android:textSize="@dimen/activity_play_text_size"
        android:text="@string/hint" />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_play_52_margin"
        android:gravity="end"
        android:layout_marginEnd="@dimen/activity_play_15_margin"
        android:layout_marginTop="@dimen/activity_play_25_margin"
        android:textSize="@dimen/activity_play_text_size"
        android:text="@string/earned_price"
        android:layout_toEndOf="@id/space_2"/>
    <TextView
        android:id="@+id/text_of_question"
        android:layout_below="@id/is_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_play_question_text_size"
        android:textStyle="bold"
        android:text="@string/text_of_current_question"
        android:textAlignment="center"
        android:gravity="center" />

    <View
        android:id="@+id/center_square"
        android:layout_width="@dimen/center_square_width_height"
        android:layout_height="@dimen/center_square_width_height"
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/button_4"
        android:layout_width="@dimen/variant_button_width"
        android:layout_height="@dimen/variant_button_height"
        android:layout_toEndOf="@id/center_square"
        android:layout_below="@id/button_3"
        android:text="@string/text_of_button_4"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/button_2"
        android:layout_below="@id/button_1"
        android:layout_toStartOf="@id/center_square"
        android:layout_width="@dimen/variant_button_width"
        android:layout_height="@dimen/variant_button_height"
        android:text="@string/text_of_button_2" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="@dimen/variant_button_width"
        android:layout_height="@dimen/variant_button_height"
        android:layout_below="@id/text_of_question"
        android:layout_toStartOf="@id/center_square"
        android:text="@string/text_of_button_1" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="@dimen/variant_button_width"
        android:layout_height="@dimen/variant_button_height"
        android:layout_below="@id/text_of_question"
        android:layout_toEndOf="@id/center_square"
        android:text="@string/text_of_button_3"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/quit_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_play_25_margin"
        android:layout_marginEnd="@dimen/activity_play_25_margin"
        android:layout_below="@id/button_2"
        android:minWidth="@dimen/activity_play_end_button_min_width"
        android:text="@string/take_winnings" />

</RelativeLayout>